<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>MyService Sitemap</title>
  <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
  <style>
    .err {
      color: red;
    }

    .ok {
      color: limegreen;
    }
  </style>
</head>
<body>
  <table class="pure-table">
    <thead>
      <tr>
        <th>Page</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
<% pages.forEach((page, index) => { %>
      <tr>
        <td><a href="<%= page.file %>"><%= page.file %></a></td>
        <td> <strong>Links:</strong>
          <ul>
            <% page.links.forEach((link, l_index) => { 
              if (link.statusCode.toString().charAt(0) == "2") { %>
                <li class="ok"><a href="<%- link.link %>"><%- link.link %> - <%- link.statusCode %> <%- link.statusText %></a></li>
              <% } else { %>
                <li class="err"><a href="<%- link.link %>"><%- link.link %> - <%- link.statusCode %> <%- link.statusText %></a></li>
              <% }
            }); %>
          </ul>
        </td>
      </tr>
<% }); %>
    </tbody>
  </table>
</body>
</html>

