<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width" name="viewport">
  <title>NLHC Eligibilty | MyService</title>
  <link href="docs/css/main.css" rel="stylesheet">
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <% include ../../../global/partials/header-topbar.ejs %>
    <% include ../../../global/partials/header-claims.ejs %>
      <% include ../partials/help-button.ejs %>
        <main>
          <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
            <div class="container margin-above--none">
              <h1 class="margin-above--none ss-align--center">
                <span class="heading">Check your eligibility</span>
              </h1>
              <p class="ss-align--center">Access to free mental health treatment under our non-liability health care arrangements is dependant on your service history.
              </p>
            </div>
          </div>

          <div class="container">
            <div class="row">
              <div class="col-md-offset-2 col-md-8 margin-above--extra">
                <div class="form-group" id="q1">
                  <fieldset>
                    <legend class="legend-label">Have you been a member of the Permanent Forces?</legend>
                    <div class="radio-toggle">
                      <label class="on label-left">
                        <input type="radio" id="permanentYes" name="PermanentQuestion" value="yes">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right">
                        <input type="radio" id="permanentNo" name="PermanentQuestion" value="no">
                        <span>No</span>
                      </label>
                    </div>
                  </fieldset>
                </div>

                <div class="form-group" id="q1b">
                  <fieldset>
                    <legend class="legend-label">Have you been a member of the Reserves?</legend>
                    <div class="radio-toggle">
                      <label class="on label-left">
                        <input type="radio" id="reservistYes" name="ReserveQuestion" value="yes">
                        <span>Yes</span>
                      </label>
                      <label class="off label-right">
                        <input type="radio" id="reservistNo" name="ReserveQuestion" value="no">
                        <span>No</span>
                      </label>
                    </div>
                  </fieldset>
                </div>

                <div id="ReservistChecklist" class="margin-above margin-below--large">

                  <h4></h4>
                  <h4>Choose any that apply:</h4>
                  <div class="margin-below--mid">
                    <div class="uikit-text-input__label-wrapper--inline-block">
                      <label class="uikit-control-input">
                        <input class="uikit-control-input__input" type="checkbox" name="cfts" id="cfts">
                        <span class="uikit-control-input__text">I performed a period of continuous full-time service</span>
                      </label>
                    </div>
                    <div class="tooltip">
                      <div id="gender-tt-label" class="tooltip__control" tabindex="0" role="button" aria-controls="gender-tt-message" aria-expanded="false">
                        <div class="tooltip__label tooltip__label--icon-only">
                          <a>CFTS help</a>
                        </div>
                        <div class="tooltip__tab"></div>
                      </div>
                      <div id="gender-tt-message" class="tooltip__content" aria-labelledby="gender-tt-label" role="region" tabindex="-1" aria-hidden="true">
                        <div class="tooltip__message">You may have been deployed on continuous full-time service, or undertaken a continuous full-time service contract. </div>
                        <div class="tooltip__close" role="button" tabindex="0">Close</div>
                      </div>
                    </div>
                  </div>
                  <div class="margin-below--mid">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input reservistquestions" type="checkbox" name="disaster" id="disaster">
                      <span class="uikit-control-input__text">My service included a Disaster Relief operation</span>
                    </label>
                  </div>
                  <div class="margin-below--mid">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input reservistquestions" type="checkbox" name="border" id="border">
                      <span class="uikit-control-input__text">My service included a Border Protection operation</span>
                    </label>
                  </div>
                  <div class="margin-below--mid">
                    <label class="uikit-control-input">
                      <input class="uikit-control-input__input reservistquestions" type="checkbox" name="accident" id="accident">
                      <span class="uikit-control-input__text">I was involved in a serious training accident whilst serving</span>
                    </label>
                  </div>
                </div>


                <!-- <div id="divider">
                  <hr>
                </div> -->

                <!-- <h2 id="message-more">Tell us more</h2>

                <div class="form-group" id="DisasterReliefOperationName">
                  <label class="uikit-text-input__label">Disaster relief operation name
                    <span class="hint">(optional)</span>
                  </label>
                  <input class="uikit-text-input input-half" type="text" value="" id="DROperation">
                </div>


                <div class="form-group" id="BorderProtectionOperationName">
                  <label class="uikit-text-input__label">Border protection operation name
                    <span class="hint">(optional)</span>
                  </label>
                  <input class="uikit-text-input input-half" type="text" value="" id="BPOperation">
                </div> -->


                <div id="TrainingIncident">
                  <!-- <div class="form-group" id="TrainingLocation">
                    <label class="uikit-text-input__label">Location of serious training accident
                      <span class="hint">(optional)</span>
                    </label>
                    <input class="uikit-text-input input-half" type="text" value="" id="locationincident">
                  </div> -->

                  <div class="form-group" id="DateofIncident">
                    <label class="uikit-text-input__label" for="cease-work-date">Approximately when did the serious training accident occur?
                      <span class="hint">(mm / yyyy)</span>
                    </label>
                    <input class="uikit-text-input mm" type="text" name="mm-date-finish-studying" id="mm-date-incident" maxlength="2" aria-label="2 digit month"> /
                    <input class="uikit-text-input yyyy" type="text" name="yyyy-date-finish-studying" id="yyyy-date-incident" maxlength="4" aria-label="4 digit year">
                  </div>
                </div>

                <!-- <div id="eligible-yes" class="uikit-page-alerts uikit-page-alerts--success margin-below">You are eligible for free mental health treatment.</div> -->

                <p id="choose-next">Choose
                  <b>next</b> to continue.</p>

                <div class="pagination margin-above--extra">
                  <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href='/nlhc-start'">Previous</button>
                  <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#open-modal'">Cancel request</button>
                  <div class="floated">
                    <button class="uikit-btn" id="next">Next</button>
                  </div>
                </div>

                <% include ../partials/cancel-modal.ejs %>

              </div>
        </main>

        <% include ../../../global/partials/footer.ejs %>
          <% include ../partials/panel-help.ejs %>

            <script>


              $("#q1b").hide();
              $("#ReservistChecklist").hide();
              $("#DisasterReliefOperationName").hide();
              $("#BorderProtectionOperationName").hide();
              $("#TrainingIncident").hide();
              $("#divider").hide();
              $("#eligible-yes").hide();
              $("#choose-next").hide();
              $("#message-more").hide();

              $("input[name$='PermanentQuestion']").click(function () {
                if (this.value === 'yes') {
                  iseligibile = true
                  $("#q1b").hide();
                  $("#ReservistChecklist").hide();
                  $("#DisasterReliefOperationName").hide();
                  $("#BorderProtectionOperationName").hide();
                  $("#TrainingIncident").hide();
                  $("#divider").hide();

                  $("#eligible-yes").show();
                  $("#choose-next").show();
                }
                else if (this.value === 'no') {
                  $("#q1b").show();
                  $("#eligible-yes").hide();
                  $("#choose-next").hide();
                }
              });

              $("input[name$='ReserveQuestion']").click(function () {
                if (this.value === 'yes') {
                  $("#ReservistChecklist").show();
                  $("#choose-next").hide();
                }
                else if (this.value === 'no') {
                  $("#ReservistChecklist").hide();
                  $("#choose-next").show();
                }
              });

              $("#cfts").click(function () {
                if (this.checked) {
                  $("#eligible-yes").show();
                  $("#choose-next").show();
                }
                else {
                  $("#eligible-yes").hide();
                  $("#choose-next").hide();
                }
              });
              $("#disaster").click(function () {
                if (this.checked) {
                  $("#DisasterReliefOperationName").show();
                  $("#choose-next").show();
                }
                else {
                  $("#DisasterReliefOperationName").hide();
                  $("#choose-next").hide();
                }
              });
              $("#border").click(function () {
                if (this.checked) {
                  $("#BorderProtectionOperationName").show();
                  $("#choose-next").show();
                }
                else {
                  $("#BorderProtectionOperationName").hide();
                  $("#choose-next").hide();
                }
              });
              $("#accident").click(function () {
                if (this.checked) {
                  $("#TrainingIncident").show();
                  $("#choose-next").hide();
                }
                else {
                  $("#TrainingIncident").hide();
                }
              });

              // check if any of the contextual questions are checked and if so, will display the <hr> divider

              var $questions = $(".reservistquestions")
              var iseligibile = false

              $questions.click(function () {
                var checked = false
                $questions.each(function () {
                  if (this.checked) {
                    iseligibile = true
                    checked = true
                  }
                });
                if (checked) {
                  $("#divider").show();
                }
                else {
                  $("#divider").hide();
                }
              });

              // change the destination URL of the next button depending on eligibility

              var buttonon = true;

              $("#next").click(function () {
                if (iseligibile) {
                  window.location.href = "/health-card1b";
                }
                else {
                  window.location.href = "/health-card-blocker";
                }
              });


            </script>

</body>

</html>