                $("#btnNext").click(function () { window.location.href = "/health-card0" });

                $("input[name$='instructions']").attr('disabled', true);
                $("#arrow-back").hide();

                $("#arrow-next").click(function () {

                  $('ul.instructions__inner li:visible').fadeOut(function () { //select only the visible element

                    var $next = $(this).next(); //get the next element
                    var $target = $next.length ? $next : $('ul.instructions__inner li:first'); //if there is no next then switch the pointer to point to the first one.
                    $target.stop(true, true).fadeIn('slow'); //now fadeIn the target element.
                    $("#arrow-back").fadeIn('slow');
                  });
                });

                $("#arrow-back").click(function () {
                  $('ul.instructions__inner li:visible').fadeOut(function () {
                    var $prev = $(this).prev(); //get the prev element
                    var $target = $prev.length ? $prev : $('ul.instructions__inner li:last');//if there is no next then switch the pointer to point to the last one.
                    $target.stop(true, true).fadeIn('slow');//now fadeIn the target element.
                  });
                });



