<% var claims = JSON.parse(include("claims-data"));%>

<!DOCTYPE html>
<html class="js" lang="en">

<head>
  <title>Claims | MyService</title>
  <%- include(partials+"components/layout/head") %>
</head>

<body class="uikit-body uikit-grid uikit-refactor">
  <noscript>
    <p role="alert">This website needs JavaScript to work properly.</p>
  </noscript>
  <nav class="uikit-skip-link">
    <a class="uikit-skip-link__link" href="#main-content">Skip to main content</a>
  </nav>
  <%- include(partials+"components/layout/header-topbar") %>
  <%- include(partials+"components/layout/header-authenticated") %>
  <%- include(partials+"components/layout/header-nom-rep") %>
  <main>
    <section class="claims-page" id="claim-activity">
      <div id="main-content" class="section-feature border-bottom--mild margin-above--none margin-below--none padding-below">
        <h1 class="margin-above--none container">
          <span class="heading">Your claims</span>
        </h1>

        <div class="container">
          <%# <div class="container-fluid" id="line-1">
            <div class="row">
              <div class="col-md-12 uikit-grid" id="claim-activity">
                <div class="col-md-3 col-xs-3 flex-item-1">
                  <p><a class="flag-text">Documents required</a></p>
                </div>
                <div class="col-md-4 col-xs-4 flex-item-2 claim-title-status">
                  <p class="main">Service Pension</p>
                  <p class="details">Claim ID: 33657809</p>
                </div>
                <div class="col-md-5 col-xs-5 flex-item-3 claim-actions-status claim-actions">
                  <button class="uikit-btn small uikit-btn--borderless">Add documents</button>
                  <button class="uikit-btn small uikit-btn--borderless">Withdraw</button>
                  <button class="uikit-btn small uikit-btn--borderless" onclick="window.location.href = '#open-example-modal'">View</button>
                </div>
              </div>
            </div>
          </div> %>

          <%# <div class="container-fluid">
            <div class="row">
              <div class="col-md-12 uikit-grid" id="claim-activity-top">
                <div class="col-md-9 col-sm-12 flex-item-1-top margin-above--large margin-below--large">
                  <h3 class="claim-heading">Manage and track your claims</h3>
                </div>
                <div class="col-md-3 col-sml-12 flex-item-2-top margin-above--large" style="padding-right: 0;">
                  <button id="scroll-to-claim" class="uikit-btn uikit-btn--primary" onclick="scrollToAdd();">&nbsp;Make a claim&nbsp;</button>
                </div>
              </div>
            </div>
          </div> %>
          <% claims.forEach((claim, index) => { %>
          <div class="container-fluid" id="line-1">
            <div class="row">
              <div class="col-md-12 uikit-grid" id="claim-activity">
                <div class="col-md-3 col-xs-3 flex-item-1 <%= claim.status == 'In Progress' ? 'status-flag' : 'status' %>">
                  <p class="main"><a class="<%= claim.status == 'In Progress' ? 'flag-text' : ' ' %>"><%- claim.status %></a></p>
                  <p class="details"><%- claim.submittedDate ? claim.submittedDate : " " %></p>
                </div>
                <div class="col-md-4 col-xs-4 flex-item-2 claim-title-status">
                  <p class="main"><%- claim.title %></p>
                  <p class="details">Claim ID: <%- claim.id %></p> <!-- //33657809 -->
                </div>
                <div class="col-md-5 col-xs-5 flex-item-3 claim-actions-status claim-actions">
                  <button class="uikit-btn small uikit-btn--borderless">Add documents</button>
                  <button class="uikit-btn small uikit-btn--borderless"><%- claim.status %></button>
                  <button class="uikit-btn small uikit-btn--borderless" onclick="window.location.href = '#open-example-modal'">View</button>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>

  </main>
  <!-- Modal code -->
  <div id="open-example-modal" class="modal-window">
    <div>
      <a href="#modal-close" title="Close" class="modal-close">Close</a>
      <!-- <h5>MODAL EXAMPLE</h5> -->
      <h2>Your qualifying service claim has been rejected. </h2>
      <p>Your service pension claim may now be ineligible.</p>
      <div class="modal-buttons">
        <button class="uikit-btn" onclick="window.location.href = '#modal-close'">Proceed with claim</button>
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#modal-close'">Cancel claim</button>
      </div>
    </div>
    <button id="show-more-button" class="uikit-btn uikit-btn small margin-above" onclick="showToggle();">Show more</button>
  </div>
  </div>
  </section>
  </main>
  <!-- Modal code -->
  <div id="open-example-modal" class="modal-window">
    <div>
      <a href="#modal-close" title="Close" class="modal-close">Close</a>
      <!-- <h5>MODAL EXAMPLE</h5> -->
      <h2>Your qualifying service claim has been rejected. </h2>
      <p>Your service pension claim may now be ineligible.</p>
      <div class="modal-buttons">
        <button class="uikit-btn" onclick="window.location.href = '#modal-close'">Proceed with claim</button>
        <button class="uikit-btn uikit-btn--tertiary" onclick="window.location.href = '#modal-close'">Cancel claim</button>
      </div>
    </div>
  </div>

  <%- include(partials+"components/layout/footer") %>
  <%- include(partials+"content/modals/claims-dhoas-start-modal") %>
</body>

</html>
